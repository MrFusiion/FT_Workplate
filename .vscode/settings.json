        },
        {
            "icon": "lua_client",
            "extensions": ["client.lua"],
            "format": "png"
        },
        {
            "icon": "lua_module",
            "extensions": ["lua"],
            "format": "png"
        },
        {
            "icon": "studio",
            "extensions": ["rbxlx", "rbxl"],
            "format": "png"
        },
        {
            "icon": "studiolocked",
            "extensions": ["rbxlx.lock", "rbxl.lock"],
            "format": "png"
        },
        {
            "icon": "square",
            "extensions": ["meta.json"],
            "format": "png"
        },
        {
            "icon": "gear",
            "extensions": ["project.json"],
            "format": "png"
        },
        {
            "icon": "information",
            "extensions": ["md"],
            "format": "png"
        },
        {
            "icon": "value",
            "extensions": ["value.meta.json", "value.model.json"],
            "format": "png"
        },
        {
            "icon": "tool",
            "extensions": ["tool.meta.json", "tool.model.json"],
            "format": "png"
        },
        {
            "icon": "part",
            "extensions": ["part.meta.json", "part.model.json"],
            "format": "png"
        },
        {
            "icon": "model",
            "extensions": ["model.json"],
            "format": "png"
        },
        {
            "icon": "event",
            "extensions": ["event.meta.json", "event.model.json"],
            "format": "png"
        },
        {
            "icon": "function",
            "extensions": ["function.meta.json", "function.model.json"],
            "format": "png"
        }
    ],

    "vsicons.associations.folders": [
        {
            "icon": "game",
            "extensions": ["src", "workspace"],
            "format": "png"
        },
        {
            "icon": "studio",
            "extensions": ["modules", "config"],
            "format": "png"
        },
        {
            "icon": "replicated",
            "extensions": ["shared", "first"],
            "format": "png"
        },
        {
            "icon": "serverscripts",
            "extensions": ["server"],
            "format": "png"
        },
        {
            "icon": "playerscripts",
            "extensions": ["client"],
            "format": "png"
        },
        {
            "icon": "gui",
            "extensions": ["gui"],
            "format": "png"
        },
        {
            "icon": "tool",
            "extensions": ["tools"],
            "format": "png"
        },
        {
            "icon": "light",
            "extensions": ["light"],
            "format": "png"
        },
        {
            "icon": "sound",
            "extensions": ["sound"],
            "format": "png"
        }
    ],

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "keyword.control",
                    "variable.language.self.lua",
                    "keyword.local.lua"
                ],
                "settings": {
                    "foreground": "#F86D7C"
                }
            },
            {
                "scope": [
                    "constant.numeric",
                    "constant.language.nil.lua",
                    "constant.language.boolean.true.lua",
                    "constant.language.boolean.false.lua"
                ],
                "settings": {
                    "foreground": "#FFC600"
                }
            },
            {
                "scope": [
                    "entity.name.function.lua"
                ],
                "settings": {
                    "foreground": "#FDFBAC"
                }
            },
            {
                "scope": [
                    "constant.language",
                    "support.function.lua",
                    "entity.name.type.class",
                    "entity.name.type",
                    "support.function.library.lua",
                    "support.type.lua"
                ],
                "settings": {
                    "foreground": "#76D6F7"
                }
            },
            {
                "scope": "variable.property.lua",
                "settings": {
                    "foreground": "#58A1F1"
                }
            },
            {
                "scope": [
                    "comment.line.double-dash.lua",
                    "comment.block.lua"
                ],
                "settings": {
                    "foreground": "#666666"
                }
            },
            {
                "scope": [
                    "string.quoted.single.lua",
                    "string.quoted.double.lua"
                ],
                "settings": {
                    "foreground": "#ADF195"
                }
            },
            {
                "scope": [
                    "variable",
                    "entity.other.attribute",
                    "variable.other.constant.lua"
                ],
                "settings": {
                    "foreground": "#CCCCCC"
                }
            },
        ]
    },

    "vsicons.associations.folderDefault.folder": {
        "icon": "studio",
        "format": "png"
    },
    "Lua.diagnostics.disable": [
        "unused-function",
        "unused-local"
    ],
}